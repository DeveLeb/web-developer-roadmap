{
  "name": "develeb-fullstack-application",
  "version": "1.0.0",
  "description": "Fullstack Web app template",
  "main": "server.js",
  "engines": {
    "node": "^18.11.0"
  },
  "author": "Hasan Kataya",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "knex": "^3.0.1",
    "mysql2": "^3.6.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "scripts": {
    "setup": "cd client && npm i && cd ../ && npm i && npm run dev",
    "client": "cd client && npm start",
    "server": "nodemon ./server/server.js",
    "dev": "concurrently --kill-others \"npm run client\" \"npm run server\""
  },
  "nodemonConfig": {
    "ignore": [
      "client/",
      "config/",
      "server/server.js",
      "server/knexfile.js"
    ]
  }
}
