{
  "name": "develeb-fullstack-application",
  "version": "1.0.0",
  "description": "Fullstack Web app template",
  "main": "server.js",
  "engines": {
    "node": "^18.11.0"
  },
  "author": "Hasan Kataya",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "knex": "^3.0.1",
    "mysql2": "^3.6.2",
    "popular-movie-quotes": "^1.2.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.1",
    "prettier": "3.2.5"
  },
  "scripts": {
    "setup": "cd client && npm i && cd ../ && npm i && npm run dev",
    "client": "cd client && npm start",
    "server": "nodemon ./server/server.js",
    "dev": "concurrently --kill-others \"npm run client\" \"npm run server\"",
    "eslint:fix": "eslint --ignore-path .gitignore --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "npm run eslint:fix",
      "git add"
    ],
    "src/**/*.{js,jsx,json,css}": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "client/",
      "config/",
      "server/server.js",
      "server/knexfile.js"
    ]
  }
}
